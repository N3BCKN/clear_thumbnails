{
  "manifest_version": 3,
  "name": "YouTube Thumbnail Replacer",
  "version": "1.0",
  "description": "Zastępuje miniatury YouTube szarymi obszarami z tytułami",
  "permissions": ["scripting"],
  "host_permissions": ["https://www.youtube.com/*"],
  "action": {

  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}